{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "txt2img Model Configuration",
    "description": "Configuration for txt2img model presets",
    "type": "object",
    "required": [
        "type",
        "model"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "sdxl",
                "sd3",
                "flux",
                "flux_schnell",
                "chroma",
                "zimage"
            ],
            "description": "Model architecture type"
        },
        "model": {
            "type": "string",
            "description": "Model reference: Civitai AIR URN, HuggingFace repo, or URL",
            "examples": [
                "urn:air:sdxl:checkpoint:civitai:827184@1469915",
                "black-forest-labs/FLUX.1-schnell",
                "lodestones/Chroma1-Flash"
            ]
        },
        "vae": {
            "type": [
                "string",
                "null"
            ],
            "default": null,
            "description": "Custom VAE (SDXL only). Null uses model's embedded VAE"
        },
        "loras": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "ref": {
                                "type": "string"
                            },
                            "triggers": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "weight": {
                                "type": "number",
                                "default": 1.0
                            }
                        },
                        "required": [
                            "ref"
                        ]
                    }
                ]
            },
            "default": [],
            "description": "LoRA configurations (SDXL only)"
        },
        "training_resolution": {
            "type": "integer",
            "default": 1024,
            "description": "Model's training resolution (SDXL only)"
        },
        "default_steps": {
            "type": "integer",
            "minimum": 1,
            "maximum": 150,
            "description": "Default inference steps. Optimal values vary by model type"
        },
        "default_cfg": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 30.0,
            "description": "Default CFG scale. Some models (schnell, zimage) ignore this"
        },
        "default_sampler": {
            "type": "string",
            "default": "euler",
            "description": "Default sampler (SDXL only)"
        },
        "output_format": {
            "type": "string",
            "enum": [
                "png",
                "webp"
            ],
            "default": "webp",
            "description": "Output image format"
        }
    }
}
